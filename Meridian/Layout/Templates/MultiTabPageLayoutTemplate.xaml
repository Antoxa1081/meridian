<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:layout="clr-namespace:Meridian.Layout">
    <Style x:Key="MultiTabPageLayoutStyle" TargetType="layout:MultiTabPageLayout" x:Shared="False">
        <Setter Property="Tabs" Value="{Binding Content, RelativeSource={RelativeSource AncestorType=layout:PageBase}}" />
        <Setter Property="HeaderHeight" Value="120" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="layout:MultiTabPageLayout">
                    <Grid>
                        <TabControl ItemsSource="{TemplateBinding Tabs}" Style="{StaticResource CommonTabControlStyle}"
                                    ItemContainerStyle="{StaticResource CommonTabItemStyle}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>